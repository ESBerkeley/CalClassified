.navbar-inner {
background: #3d368b; /* Old browsers */
background: -moz-linear-gradient(top, #3d368b 0%, #232051 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#3d368b), color-stop(100%,#232051)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top, #3d368b 0%,#232051 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top, #3d368b 0%,#232051 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top, #3d368b 0%,#232051 100%); /* IE10+ */
background: linear-gradient(top, #3d368b 0%,#232051 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#3d368b', endColorstr='#232051',GradientType=0 ); /* IE6-9 */
}

.navbar-search .search-query {

  color: black;
  background-color: #ffffff;

}

.navbar-search .search-query:-moz-placeholder {
  color: #747474;
}
.navbar-search .search-query::-webkit-input-placeholder {
  color: #747474;
}

